<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_perg1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qual a versão númerica do Android Oreo ?"/>

    <RadioGroup
        android:id="@+id/perg2_alternativas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/perg2_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="6"/>

        <RadioButton
            android:id="@+id/perg2_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="7"/>

        <RadioButton
            android:id="@+id/perg2_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="8"/>

        <Button
            android:id="@+id/perg2_proxima"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Proxima"/>

    </RadioGroup>

</LinearLayout>
